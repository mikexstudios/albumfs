!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ :charset => "UTF-8" }
    = csrf_meta_tag

    %title= yield :title

    -#= stylesheet_link_tag 'scaffold'
    = javascript_include_tag :defaults

    -# For compass stylesheets
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    /[if lt IE 7]
      = stylesheet_link_tag 'ie6.css', :media => 'screen, projection'

    -# For css3 buttons
    -#= stylesheet_link_tag 'http://ubuwaits.github.com/css3-buttons/css/buttons.css'
    
  
  %body{ :id => "#{location_name}", :class => "bp #{controller.controller_name}" }
    #container
      #header
        %h1.logo <a href="">ALBUM<span class="fs">FS</span></a>
        .navigation
          %ul
            %li.search
              = link_to 'Search', page_path('home')
            %li.signup 
              = link_to 'Signup', new_user_registration_path
            %li.login
              = link_to 'Login', new_user_session_path

      #content
        .wrap
          - unless notice.blank?
            %p.notice= notice
          - unless alert.blank?
            %p.alert= alert
          = yield

